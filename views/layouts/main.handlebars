<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/skeleton.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <link rel="stylesheet" href="/css/footerstyle.css">
    <title>OnlyFarms</title>
</head>
<body>

  <header>

        <div id="headerContainer">
            {{#if logged_in}}
            <a href="/dashboard" id="siteHomeLink"><img src="/assets/onlyfarms-logo.svg" id="sitelogo"></a>
            {{else}}
            <a href="/" id="siteHomeLink"><img src="/assets/onlyfarms-logo.svg" id="sitelogo"></a>
            {{/if}}
            <nav>
               
                {{#if logged_in}}
                <a href="#" id="logout">Logout</a>
                {{!-- <a href="/dashboard">Dashboard</a> --}}
                <a href ="/farms">Directory</a>
                {{else}}
                 <a href="#" id="signBtn">Sign up</a>
                 <a href="#" id="logBtn">Login</a>
                {{/if}}
            </nav>
        </div>

  </header>
<main>
    {{{body}}}
</main>
 
 <footer class="section green">
    <div class="container footer">
            <div class="three columns">
                <img src="/assets/onlyfarms-logo-green.svg" alt="OnlyFarms logo">
            </div>

            <div class="three columns">
                <h5>About</h5>
                <ul>
                    <li><a href="#">Policies</a></li>
                    <li><a href="#">GitHub Repo</a></li>
                    <li><a href="#">License</a></li>
                    <li><a href="#">Framework</a></li>
                </ul>
            </div>

            <div class="three columns">
                <h5>Team</h5>
                <ul>
                    <li><a href="#">Luke</a></li>
                    <li><a href="#">Matt</a></li>
                    <li><a href="#">Greg</a></li>
                    <li><a href="#">Sufi</a></li>
                </ul>
            </div>

            <div class="three columns">
                <h5>Misc</h5>
                <ul>
                    <li><a href="#">Design docs</a></li>
                    <li><a href="#">Help</a></li>
                </ul>
            </div>
    </div>
</footer>

<div class="modal" id="logModal">
    <div class="modal-content">
        <span class="close" id="logClose">&times;</span>
        <div class="login-area">
            <h2>Log in</h2>
            <form id="login-form">
                <label for="username-login">Username</label>
                <input id="username-login" class="form-input u-full-width" type="text" placeholder="Username" required="true">
                <label for="password-login">Password</label>
                <input id="password-login" class="form-input u-full-width" type="password" placeholder="Password" required="true">
                <p id="loginStatus" class="passResponse"></p>
                <button class="button-primary modalBtn" id="loginBtn">Log in</button>
            </form>
        </div>
    </div>
</div>

<!-- Create account modal -->
<div class="modal" id="signModal">
    <div class="modal-content">
        <span class="close" id="signClose">&times;</span>
            <div class="signup-area">
            <h2>Create account</h2>
            <form id="signup-form">
                <label for="username-signup">Username</label>
                <input id="username-signup" class="form-input u-full-width" type="text" placeholder="Choose a username" required="true">
                <label for="password-signup">Password</label>
                <input id="password-signup" class="form-input u-full-width" type="password" placeholder="Choose a password" required="true">
                <label for="password-signup-conf">Confirm Password</label>
                <input id="password-signup-conf" class="form-input u-full-width" type="password" placeholder="Confirm password" required="true">
                <p id="signupStatus" class="passResponse"></p>
                <button class="button-primary modalBtn" id="signupBtn">Create account</button>
            </form>
        </div>
    </div>
</div>



{{#if logged_in}}
<script src="/js/logout.js"></script>
{{else}}
<script src="/js/modals.js"></script>
{{/if}}
</body>

</html>