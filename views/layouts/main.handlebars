<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/normalize.css">
    <link rel="stylesheet" href="./css/skeleton.css">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="icon" type="image/x-icon" href="./assets/favicon.ico">
    <link rel="stylesheet" href="./css/footerstyle.css">
    <title>OnlyFarms</title>
</head>
<body>

  <header>


        <div id="headerContainer">
            <a href="/" id="siteHomeLink"><img src="./assets/onlyfarms-logo.svg" id="sitelogo"></a>
            <nav>
               
                {{#if logged_in}}
                <a id="logout">Logout</a>
                {{else}}
                 <a href="#" id="signBtn">Sign up</a>
                <a href="#" id="logBtn">Login</a>
                {{/if}}
            </nav>
        </div>

  </header>
<main>
    {{{body}}}
</main>
 
  <footer class="section green">
    <div class="container footer">
        <div class="row">
            <div class="seven columns">
                <div class="row">
                    {{#if logged_in}}
                    <script src="/js/logout.js"></script>
                    {{/if}}
                    <a href="#" class="btn">Sign Up Today!</a>
                </div>
                <div class="row wrap">
                    <div><a href="#">Policies</a></div>
                    <div><a href="#">GitHub Repo</a></div>
                    <div><a href="#">License</a></div>
                    <div><a href="#">Framework</a></div>
                </div>
            </div>
        

            <div class="five columns">
                <div class="row">
                    <img src="./assets/onlyfarms-logo-green.svg" alt="">
                </div>
                <div class="row wrap">
                    <div><a href="#">Luke</a></div>
                    <div><a href="#">Matt</a></div>
                    <div><a href="#">Greg</a></div>
                    <div><a href="#">Sufi</a></div>
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="modal" id="logModal">
    <div class="modal-content">
        <span class="close" id="logClose">&times;</span>
        <div class="login-area">
            <h2>Log in</h2>
            <form id="form" class="login-form">
                <label for="username-login">Username</label>
                <input id="username-login" class="form-input u-full-width" type="text" placeholder="Username" required="true">
                <label for="password-login">Password</label>
                <input id="password-login" class="form-input u-full-width" type="text" placeholder="Password" required="true">
                <button class="button-primary modalBtn" id="loginBtn">Log in</button>
            </form>
        </div>
    </div>
</div>

<!-- Create account modal -->
<div class="modal" id="signModal">
    <div class="modal-content">
        <span class="close" id="signClose">&times;</span>
            <div class="signup-area">
            <h2>Create account</h2>
            <form id="form" class="signup-form">
                <label for="username-signup">Username</label>
                <input id="username-signup" class="form-input u-full-width" type="text" placeholder="Choose a username" required="true">
                <label for="password-signup">Password</label>
                <input id="password-signup" class="form-input u-full-width" type="text" placeholder="Choose a password" required="true">
                <button class="button-primary modalBtn" id="signupBtn">Create account</button>
            </form>
        </div>
    </div>
</div>


<script src="./js/modals.js"></script>
</body>

</html>