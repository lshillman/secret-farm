<section class="login-page">
    <div class="login-area">
        <h2>Login:</h2>
        <form id="form" class="login-form">
            <label for="email-login">Email:</label>
            <input id="email-login" class="form-input" type="text" placeholder="Email Address" required="true">
            <label for="password-login">Password:</label>
            <input id="password-login" class="form-input" type="text" placeholder="Password" required="true">
            <button class="login-btn">Log-In</button>
        </form>
    </div>
    <br>
        <div class="signup-area">
        <h2>Login:</h2>
        <form id="form" class="signup-form">
            <label for="email-signup">Email:</label>
            <input id="email-signup" class="form-input" type="text" placeholder="Email Address" required="true">
            <label for="password-signup">Password:</label>
            <input id="password-signup" class="form-input" type="text" placeholder="Password" required="true">
            <button class="signup-btn">Sign-Up</button>
        </form>
    </div>

</section>